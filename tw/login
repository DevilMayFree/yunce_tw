        <script>
      var em_form = $("#lform");
      function validlform() {
        if(em_form.valid()) {
          var url = 'https://www.forwinstock.com.tw/tw/ajax/login';
          var data = em_form.serialize();
          $.post(url,data,function(a) {
            if(a.msg) {alert(a.msg); return;}
            em_form[0].reset();
            if(a.url) top.location.href=a.url;
          })
        }
      }
      $().ready(function() {
        em_form.validate({
          rules: {
            username: "required",
            password: {
              "required":true
            }
          }
        })
      });
      $(document).keypress(function(event){
        var keycode = (event.keyCode ? event.keyCode : event.which);
        if(keycode == '13'){
          validlform();
        }
      });
    </script>
